<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  app:layout_constraintBottom_toBottomOf="parent">

  <TextView
    android:id="@+id/tv_onboarding_first_1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/onboarding_first_1"
    android:textAppearance="@style/Typography.suit.extrabold_22"
    app:layout_constraintEnd_toStartOf="@id/tv_onboarding_first_2"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintHorizontal_chainStyle="packed"/>

  <TextView
    android:id="@+id/tv_onboarding_first_2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/onboarding_first_2"
    android:textAppearance="@style/Typography.suit.bold_22"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toEndOf="@id/tv_onboarding_first_1"
    app:layout_constraintEnd_toEndOf="parent"/>

  <TextView
    android:id="@+id/tv_onboarding_first_3"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/onboarding_first_3"
    android:textAppearance="@style/Typography.suit.bold_22"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@id/tv_onboarding_first_1"/>

  <ImageView
    android:id="@+id/iv_login"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="40dp"
    android:adjustViewBounds="true"
    android:src="@drawable/img_onboarding_first"
    android:layout_marginHorizontal="20dp"
    app:layout_constraintTop_toBottomOf="@id/tv_onboarding_first_3"/>

</androidx.constraintlayout.widget.ConstraintLayout>
