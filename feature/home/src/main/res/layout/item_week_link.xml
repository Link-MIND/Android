<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_marginBottom="12dp"
  android:background="@drawable/shape_white_fill_12_rect"
  android:padding="12dp">

  <androidx.cardview.widget.CardView
    android:id="@+id/cv_week_link"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    android:elevation="0dp"
    app:cardElevation="0dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <ImageView
      android:id="@+id/iv_week_link"
      android:layout_width="64dp"
      android:layout_height="64dp" />

  </androidx.cardview.widget.CardView>

  <TextView
    android:id="@+id/tv_week_link_title"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="@style/Typography.suit.medium_16"
    android:textColor="@color/neutrals900"
    android:paddingStart="12dp"
    app:layout_constraintStart_toEndOf="@id/cv_week_link"
    app:layout_constraintTop_toTopOf="@id/cv_week_link"
    tools:text="title" />

  <TextView
    android:id="@+id/tv_week_link"
    android:layout_width="wrap_content"
    android:textAppearance="@style/Typography.suit.regular_10"
    android:textColor="@color/neutrals200"
    android:layout_height="wrap_content"
    android:paddingStart="12dp"
    android:maxLines="1"
    app:layout_constraintBottom_toBottomOf="@id/cv_week_link"
    app:layout_constraintStart_toEndOf="@id/cv_week_link"
    tools:text="title" />
</androidx.constraintlayout.widget.ConstraintLayout>
