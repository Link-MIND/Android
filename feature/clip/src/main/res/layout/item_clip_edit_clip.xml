<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_marginBottom="12dp">
  <!--android:background="@color/transparent"-->

  <ImageView
    android:id="@+id/iv_clip_edit_delete"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:contentDescription="@string/edit_clip_minus_description"
    android:paddingStart="10dp"
    android:paddingTop="13dp"
    android:paddingBottom="9dp"
    android:src="@drawable/ic_minus_28"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />
  <ImageView
    android:id="@+id/iv_clip_edit_fix"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:contentDescription="@string/edit_clip_fix_description"
    android:paddingStart="10dp"
    android:paddingTop="13dp"
    android:paddingBottom="9dp"
    android:src="@drawable/ic_pin_24"
    android:visibility="invisible"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"/>


  <androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/cl_clip_edit_clip"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_white_fill_12_rect"
    android:orientation="horizontal"
    android:layout_marginStart="42dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">


    <TextView
      android:id="@+id/tv_clip_edit_title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="14dp"
      android:paddingVertical="15dp"
      android:maxLines="1"
      tools:text="clip"
      android:textAppearance="@style/Typography.suit.semibold_16"
      android:textColor="@color/neutrals850"
      app:layout_constraintStart_toStartOf="@id/cl_clip_edit_clip"
      app:layout_constraintTop_toTopOf="@id/cl_clip_edit_clip" />

    <ImageView
      android:id="@+id/iv_clip_edit_title_edit"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="3dp"
      android:layout_marginEnd="2dp"
      android:layout_marginBottom="-1dp"
      android:contentDescription="@string/edit_clip_edit_description"
      android:padding="12dp"
      android:src="@drawable/ic_edit_24"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="@id/cl_clip_edit_clip" />

  </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
