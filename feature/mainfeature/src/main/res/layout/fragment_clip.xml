<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/background">

  <androidx.appcompat.widget.Toolbar
    android:id="@+id/tb_category_toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" >
  <include layout="@layout/toolbar_clip"/>

  </androidx.appcompat.widget.Toolbar>

  <androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/cl_category_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="20dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/tb_category_toolbar">


    <androidx.appcompat.widget.AppCompatButton
      android:id="@+id/btn_category_search"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:minHeight="0dp"
      android:minWidth="0dp"
      android:paddingVertical="11dp"
      android:text="검색어를 입력하세요"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="@id/cl_category_main" />

    <TextView
      android:id="@+id/tv_category_all"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="19dp"
      android:text="전체"
      android:textAppearance="@style/Typography.suit.medium_12"
      android:textColor="@color/neutrals400"
      app:layout_constraintStart_toStartOf="@id/cl_category_main"
      app:layout_constraintTop_toBottomOf="@id/btn_category_search" />

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="2dp"
      android:layout_marginTop="19dp"
      android:text="(n)"
      android:textAppearance="@style/Typography.suit.medium_12"
      android:textColor="@color/neutrals400"
      app:layout_constraintStart_toEndOf="@id/tv_category_all"
      app:layout_constraintTop_toBottomOf="@id/btn_category_search" />

    <androidx.appcompat.widget.AppCompatButton
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="15dp"
      android:paddingVertical="4dp"
      android:text="+ 클립추가"
      android:minHeight="0dp"
      android:minWidth="0dp"
      android:textAppearance="@style/Typography.suit.medium_12"
      android:textColor="@color/primary"
      android:background="@color/transparent"
      app:layout_constraintEnd_toEndOf="@id/cl_category_main"
      app:layout_constraintTop_toBottomOf="@id/btn_category_search" />

    <androidx.recyclerview.widget.RecyclerView
      android:id="@+id/rv_category_clip"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="14dp"
      app:layout_constraintStart_toStartOf="@id/cl_category_main"
      app:layout_constraintTop_toBottomOf="@id/tv_category_all"
      tools:itemCount="3"
      tools:listitem="@layout/item_clip_clip" />

    <androidx.constraintlayout.widget.ConstraintLayout
      android:id="@+id/cl_category_empty"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginHorizontal="60dp"
      android:layout_marginTop="31dp"
      app:layout_constraintEnd_toEndOf="@id/cl_category_main"
      app:layout_constraintStart_toStartOf="@id/cl_category_main"
      app:layout_constraintTop_toBottomOf="@id/rv_category_clip">

      <ImageView
        android:id="@+id/iv_category_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/img_clip_empty"
        app:layout_constraintEnd_toEndOf="@id/cl_category_empty"
        app:layout_constraintStart_toStartOf="@id/cl_category_empty"
        app:layout_constraintTop_toTopOf="@id/cl_category_empty" />

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="클립을 추가해\n링크를 정리해보세요!"
        android:textAppearance="@style/Typography.suit.regular_16_128"
        android:textColor="@color/neutrals500"
        app:layout_constraintEnd_toEndOf="@id/cl_category_empty"
        app:layout_constraintStart_toStartOf="@id/cl_category_empty"
        app:layout_constraintTop_toBottomOf="@id/iv_category_empty" />
    </androidx.constraintlayout.widget.ConstraintLayout>

  </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

